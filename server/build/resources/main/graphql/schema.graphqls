type Query {
    bookById(id: ID): Book
    employeeById(id: ID): Employee
    employees: [Employee]
}

type Mutation {
    addEmployee(employee: EmployeeInput): Employee
}


input EmployeeInput {
    firstName: String
    lastName: String
}

type Employee {
    id: ID
    firstName: String
    lastName: String
}

type Book {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
}
